<div class="container">
  <div class="row col-xs-12 col-sm-4 col-sm-offset-4">

    <h2 class="text-center">Log in</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true %>
          <%= f.input :password, required: false %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit , "Log in", class: "btn btn-large btn-block btn-primary full-width" %>
        </div>
    <% end %>

    <%- if devise_mapping.omniauthable? %>
      <%- resource_class.omniauth_providers.each do |provider| %>
        <%= link_to omniauth_authorize_path(resource_name, provider) do %>
          <a href="/users/auth/facebook" class="login-facebook" ><i class="fa fa-facebook"><%= OmniAuth::Utils.camelize(provider)%></i></a>
        <% end %>
        <br />
      <% end -%>
    <% end -%>

  </div>
</div>
<%= render "devise/shared/links" %>





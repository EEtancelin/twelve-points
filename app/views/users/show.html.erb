<div class="avatar_url_profil" style="margin:10px">
  <% avatar_url = @user.facebook_picture_url || @user.photo && @user.photo.url || 'http://placehold.it/30x30' %>
  <img src="<%= avatar_url %>" class="avatar-large img-responsive center-block" alt="Avatar">
</div>

<div class="class text-center">
<h3><%= @user.first_name %> <%= @user.last_name %></h3>
</div>


<div class="tabs">
  <a class="tab active" href="#fine" data-toggle="tab">
    <h3>Mes contraventions</h3>
  </a>
  <a class="tab" href="#offer" data-toggle="tab">
    <h3>Mes offres</h3>
  </a>
</div>

<div class="tab-content">
  <div id="fine" class="tab-pane active">
    <div class="owl-carousel">
      <%= render partial: "fines/card", collection: @fines, as: :fine %>
    </div>
    <div class="text-center" style="margin:10px">
      <%= link_to t(".top_call_to_action", default: 'Modifiez votre profil'), edit_user_registration_path(@user), class: "navbar-wagon-item navbar-wagon-button btn" %>
    </div>
  </div>

  <div id="offer" class="tab-pane flex-vertical-center">
    <%= render partial: "offers/card", collection: @offers, as: :offer %>
  </div>
</div>

